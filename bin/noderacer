#!/bin/bash
NODEJS=/usr/bin/nodejs
alias node=$NODEJS

#exampe "./bin/noderacer instrument /path/to/app"

SOURCE="${BASH_SOURCE[0]}"
DIR="$( cd "$( dirname "$SOURCE" )" && pwd )"

if test $# -ge 1
then
    node --max-old-space-size=8192 --stack-size=16000 $AVD $* 
fi

node ${DIR}/../driver/cmd.js $@
